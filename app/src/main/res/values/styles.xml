    <style name="PinViewStyle" parent = "PinWidget.PinView">
        <item name="android:cursorVisible">true</item>
        <item name="android:hint">0000</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="cursorWidth">2.5dp</item>
        <item name="cursorColor">@color/black</item>
        <item name="itemHeight">54dp</item>
        <item name="itemSpacing">16dp</item>
        <item name="itemWidth">56dp</item>
        <item name="lineColor">@color/black</item>
        <item name="lineWidth">2dp</item>
        <item name="viewType">line</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="CardViewUser" parent = "Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/grey_white</item>
        <item name="cardCornerRadius">44dp</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="InputText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/grey</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textSize">17sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="ButtonNextStyle" parent = "TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/background_for_cont</item>
        <item name="android:backgroundTint">@color/pochti_white</item>
        <item name="android:textColor">@color/grey</item>
        <item name ="android:fontFamily">@font/inter</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">16sp</item>
        <item name = "android:textAllCaps">false</item>
    </style>
    
    <style name="bnStyle" parent = 'Widget.Design.BottomNavigationView'>
        <item name="itemTextAppearanceActive">@style/bnActive</item>
        <item name="itemTextAppearanceInactive">@style/bnInActive</item>
